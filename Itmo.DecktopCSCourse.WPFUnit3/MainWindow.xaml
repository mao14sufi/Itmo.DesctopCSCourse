<Window x:Class="Itmo.DecktopCSCourse.WPFUnit3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Itmo.DecktopCSCourse.WPFUnit3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        TextBoxBase.TextChanged="Window_TextChanged_1">
    <Grid TextBoxBase.TextChanged="Grid_TextChanged_1"> 
        <TextBox HorizontalAlignment="Left" Margin="30,28,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.375,0.213" TextChanged="TextBox_TextChanged"/>
        <RadioButton x:Name="radBut1" Content="Event in Textbox" HorizontalAlignment="Left" Margin="189,24,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBut2" Content="Event in Grid" HorizontalAlignment="Left" Margin="189,75,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBut3" Content="Event in Window" HorizontalAlignment="Left" Margin="189,120,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
